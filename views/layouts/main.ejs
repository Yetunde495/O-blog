  <script>
    //media queries variables
   var carousel = document.getElementById("ls-size-carousel");
   var about = document.getElementById("ls-size");
   var mobileCarousel = document.getElementById("carouselExampleIndicators");
   var mobileAbout = document.getElementById("mobile-about");
   var searchBoxCol = document.getElementById("Search-id");
   var iconDiv = document.getElementById("Icon-id");
   var firstIcon = document.getElementById("first-icon");
   var desktopRecipe = document.getElementById("desktop-recipe");
   var mobileRecipe = document.getElementById("mobile-recipe");
   var desktopBlogpage = document.getElementById("desktop-blogpage");
   var mobileBlogpage = document.getElementById("mobile-blogpage");
   var desktopLatestPost = document.getElementById("desktop-latest-div");
   var mobileLatestPost = document.getElementById("mobile-latest-div");


   //media query function
  function mediaQuery() {
    if (resize.matches) {
      carousel.replaceWith(mobileCarousel);
      about.replaceWith(mobileAbout);
      desktopRecipe.replaceWith(mobileRecipe);
      desktopLatestPost.replaceWith(mobileLatestPost);


      searchBoxCol.style.margin = "25px";
      firstIcon.style.marginLeft = "10px";
    } else {
      mobileCarousel.replaceWith(carousel);
      mobileAbout.replaceWith(about);
      mobileRecipe.replaceWith(desktopRecipe);
      mobileLatestPost.replaceWith(desktopLatestPost);

  }

}
      //media query size
  var resize = window.matchMedia("(max-width: 768px)");
  var largeScreen= window.matchMedia("(min-width: 769px)");
  mediaQuery(resize, largeScreen); // Call listener function at run time
  resize.addListener(mediaQuery); // Attach listener function on state changes
  largeScreen.addListener(mediaQuery);





          </script>


